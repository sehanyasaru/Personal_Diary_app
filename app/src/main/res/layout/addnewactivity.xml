<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="35dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"

        app:srcCompat="@drawable/backarrow" />

    <EditText
        android:id="@+id/textView11"
        android:layout_width="312dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView10"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_background"
        android:gravity="center_vertical"
        android:hint="Add here ... "
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="312dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView12"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/box_background"
        android:gravity="center_vertical"
        android:hint="Select the date you want to add  ... "
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="312dp"
        android:layout_height="80dp"
        android:layout_below="@id/textView15"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/box_background"
        android:gravity="center_vertical"
        android:hint="Select the time you want to add  ... "
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="256dp"
        android:layout_height="53dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Select the date want to add "
        android:layout_below="@id/textView11"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="256dp"
        android:layout_height="53dp"
        android:layout_below="@id/textView14"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Select the time want to add "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="256dp"
        android:layout_height="53dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="150dp"
        android:text="Enter what you wish to add "
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView16"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="20dp"
        android:text="Add" />


</RelativeLayout>