
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/leaves"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TextView
        android:id="@+id/topic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#19184B"
        android:text="Hello Fellows"
        android:fontFamily="@font/rgular"
        android:gravity="center"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/AppIcon1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/smartphone_1108389" />

    <EditText
        android:id="@+id/textView"
        android:textColor="#19184B"
        android:textColorHint="#A9A9A9"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/AppIcon1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        android:background="@drawable/box_background"
        android:gravity="center_vertical"
        android:hint="Username"
        android:paddingLeft="20dp"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:textColor="#19184B"
        android:layout_height="50dp"
        android:layout_below="@id/textView"
        android:background="@drawable/box_background"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:textColorHint="#A9A9A9"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/textView5"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/textView3"
        android:background="@drawable/box_background"
        android:layout_marginTop="20dp"
        android:textColor="#19184B"
        android:gravity="center_vertical"
        android:layout_centerHorizontal="true"
        android:hint="Repeat Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColorHint="#A9A9A9"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button"
        android:fontFamily="@font/rgular"
        android:backgroundTint="#19184B"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Sign Up"


        />

    <TextView
        android:id="@+id/textView2"
        android:layout_centerVertical="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rgular"
        android:text="I already have an account "
        android:textSize="18dp"
        android:textColor="#19184B"
        android:layout_below="@id/button"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:backgroundTint="#19184B"
        android:fontFamily="@font/rgular"
        android:gravity="center"
        android:text="Login"
        android:textColor="@color/white" />

</RelativeLayout>