<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape with padding -->
    <item android:left="16dp" android:right="16dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <!-- Background color -->
            <solid android:color="#80FFFFFF" />
            <!-- Border -->
            <stroke
                android:width="1dp"
                android:color="#CCCCCC" />
            <!-- Corner radius -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>
